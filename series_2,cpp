//to evaluate 1 + 1/2 + 1/3 + 1/4 .... + 1/n
#include <iostream>

using namespace std;

int main()
{
    int n;
    float div;
    cout << "Enter a number:";
    cin >> n;
    float ans =1.0;
    cout << "1+ ";
    for (float i = 2;i<=n;i++)
        {
            if(i<n){
                    div = 1/i;
                    ans = ans + div;
                    cout << "1/" << i << "+ ";
            }
            else{
                    div = 1/i;
                    ans = ans + div;
                    cout << "1/" << i << "= ";
            }
        }
    cout << ans;
    return 0;
}
